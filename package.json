{
  "name": "cellframe-masternode-inspector",
  "productName": "Cellframe Masternode Inspector",
  "version": "2.4.2",
  "description": "A modern, web-based dashboard for monitoring and managing Cellframe masternodes. Monitor multiple nodes, track rewards, analyze performance metrics, and visualize blockchain dataâ€”all from a sleek, responsive interface.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "android:sync": "mkdir -p www && cp index.html script.js styles.css logo.svg www/ && npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run android:sync && cd android && ./gradlew assembleDebug",
    "android:release": "npm run android:sync && cd android && ./gradlew assembleRelease"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hyttmi/cellframe-masternode-inspector-ui.git"
  },
  "keywords": [
    "cellframe",
    "masternode",
    "inspector",
    "dashboard",
    "blockchain",
    "monitoring"
  ],
  "author": {
    "name": "hyttmi",
    "email": "hyttmi@users.noreply.github.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/hyttmi/cellframe-masternode-inspector-ui/issues"
  },
  "homepage": "https://github.com/hyttmi/cellframe-masternode-inspector-ui#readme",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.cellframe.masternode-inspector",
    "productName": "Cellframe Masternode Inspector",
    "files": [
      "index.html",
      "script.js",
      "styles.css",
      "main.js",
      "logo.svg",
      "network_data.json",
      "system_data.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Network",
      "icon": "logo.svg"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "logo.svg"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "icon": "logo.svg"
    }
  },
  "dependencies": {
    "@capacitor/android": "^5.7.8",
    "@capacitor/cli": "^5.7.8",
    "@capacitor/core": "^5.7.8"
  }
}
